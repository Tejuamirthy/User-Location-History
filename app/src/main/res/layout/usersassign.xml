<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@color/layoutcolor">

    <Spinner
        android:id="@+id/adminassign"
        android:padding="5dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/helpusersassign"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Users assigned to this Admin are checked"
        android:gravity="center"
        android:padding="10dp"
        android:layout_below="@+id/adminassign"/>



    <ListView
                android:id="@+id/listview"
                android:textAlignment="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/helpusersassign"/>


</RelativeLayout>